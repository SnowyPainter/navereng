<Window x:Class="navereng.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:navereng"
        mc:Ignorable="d"
        Title="Navereng" Closing="Window_Closing" Height="400" Width="300" MinHeight="400" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox
                Foreground="#09CE20"
                Name="WordTextBox"
                KeyUp="TextBox_KeyUp"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                VerticalAlignment="Center"
                AcceptsReturn="False"
                Margin="5"
                MaxWidth="300"
                materialDesign:HintAssist.Hint="영단어를 입력해주세요" Height="49" />
        </Grid>
        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Border Margin="5 0 5 5" CornerRadius="10" BorderBrush="#09CE20" BorderThickness="2">
                <ListView Name="MeaningListView" Margin="5">
                </ListView>
            </Border>
        </Grid>
    </Grid>
</Window>
